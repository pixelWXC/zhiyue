{
  "manifest_version": 3,
  "name": "智阅",
  "version": "1.0.2",
  "description": "智阅是一款日语学习插件：一键解析句子结构、词汇与语法，支持 AI 问答和 Anki 制卡，让阅读变成高效学习。",
  "icons": {
    "16": "logo-16.png",
    "48": "logo-48.png",
    "128": "logo-128.png"
  },
  "permissions": ["sidePanel", "storage", "activeTab", "scripting"],
  "commands": {
    "toggle-sidepanel": {
      "suggested_key": {
        "default": "Alt+U"
      },
      "description": "Toggle Side Panel"
    }
  },
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "action": {
    "default_title": "Open zhiyue",
    "default_icon": {
      "16": "logo-16.png",
      "48": "logo-48.png",
      "128": "logo-128.png"
    }
  },
  "side_panel": {
    "default_path": "src/side-panel/index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/index.ts"],
      "run_at": "document_end"
    }
  ]
}
